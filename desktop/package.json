{
  "name": "lifearchivist-desktop",
  "version": "0.1.0",
  "description": "Life Archivist Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-server\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "dev-server": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "knowledge-management",
    "personal",
    "local-first",
    "search",
    "documents"
  ],
  "author": "Parthiv Naresh <parthivnaresh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.0.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "zustand": "^4.5.0"
  },
  "build": {
    "appId": "com.lifearchivist.desktop",
    "productName": "Life Archivist",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
