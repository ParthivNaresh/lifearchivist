# Life Archivist Configuration

# Core Settings
LIFEARCH_HOME=/home/user/.lifearchivist
LIFEARCH_VAULT_PATH=${LIFEARCH_HOME}/vault
LIFEARCH_DATABASE_URL=sqlite:///${LIFEARCH_HOME}/data/lifearch.db

# Models
LIFEARCH_EMBEDDING_MODEL=all-MiniLM-L6-v2
LIFEARCH_LLM_MODEL=llama3.2:3b
LIFEARCH_WHISPER_MODEL=base.en
LIFEARCH_OCR_LANG=eng

# Services
LIFEARCH_QDRANT_URL=http://localhost:6333
LIFEARCH_REDIS_URL=redis://localhost:6379
LIFEARCH_OLLAMA_URL=http://localhost:11434

# Performance
LIFEARCH_MAX_WORKERS=4
LIFEARCH_CHUNK_SIZE=512
LIFEARCH_CHUNK_OVERLAP=64
LIFEARCH_EMBEDDING_BATCH_SIZE=32

# Privacy
LIFEARCH_LOCAL_ONLY=true
LIFEARCH_ENABLE_TELEMETRY=false
LIFEARCH_ENABLE_CLOUD_MODELS=false

# Optional Cloud APIs (disabled by default)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Storage Limits
LIFEARCH_MAX_FILE_SIZE_MB=100
LIFEARCH_MAX_VAULT_SIZE_GB=100
LIFEARCH_THUMBNAIL_SIZE=256

# UI Settings
LIFEARCH_THEME=dark
LIFEARCH_LANGUAGE=en

# Server
LIFEARCH_HOST=localhost
LIFEARCH_PORT=8000